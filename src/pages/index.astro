---
import Layout from "../layouts/Layout.astro";
import { 
  getYear,
  getMonthString, 
  getDayOfWeekString,
  getDayString, 
} from "../utils/time";
import { 
  getAllFutureEvents
} from "../utils/trello.js";

const allEvents = await getAllFutureEvents();
---

<Layout title="Home">
  <h1>Events</h1>
  <ul class="event-list">
    {allEvents.map((event, index, array) => {
      const insertMonth = index === 0 || getMonthString(event.start) !== getMonthString(array[index-1]?.start);
      const insertYear = index === 0 || insertMonth && getMonthString(event.start) === "January";
      return (
      <>
        {insertMonth && <li><span class="month">{getMonthString(event.start)}</span>{insertYear && <span class="year">{getYear(event.start)}</span>}</li>}
        <li class="event-item">
          <a href={`/events/${event.slug}`}>
            <span class="day">{getDayString(event.start)}</span>
            <span class="dow">{getDayOfWeekString(event.start)}</span>
            <span class="event-name">{event.name}</span>
          </a>
        </li>
      </>
      )
    })}
  </ul>
</Layout>

<style>
  .event-list {
    padding: 0;
  }
  .event-list li {
    list-style-type: none;
    margin: var(--space-2xl) 0;
  }
  .event-list a {
    text-decoration: none;
    color: var(--text-color-primary);
  }
  .month {
    font-size: var(--text-3xl);
  }
  .year {
    font-size: var(--text-3xl);
    margin-left: var(--space-lg);
  }
  .event-item a {
    display: grid;
    grid-template-columns: 35px 150px 1fr;
  }
</style>