---
import Layout from "../../layouts/Layout.astro";
import { 
  getAllFutureEvents
} from "../../utils/trello";
import {
  getFullDateString,
getTimeString
} from "../../utils/time"

export async function getStaticPaths() {
  return (await getAllFutureEvents()).map(event => {
    return {
      params: {
        slug: event.slug
      },
      props: {
        ...event
      }
    }
  });
};

const { name, description, imageUrl, locationName, locationAddress, start, end, duration, artists, links, slug, googleMapsEmbedUrl } = Astro.props;
---

<Layout title={name}>
  <div class="event-info-container">
    <img src={imageUrl} width="700px"/>
    <h1 class="event-name">{name}</h1>
    <p class="meta-time">{getFullDateString(start)} from {getTimeString(start)}</p>
    <div set:html={description}/>
    <div class="google-maps-container">
      <iframe frameborder="0" src={ googleMapsEmbedUrl }>
      </iframe>
    </div>
    <div class="nav-links-container">
      <a class="btn-sm" href="/events">More Events</a>
    </div>
  </div>
</Layout>

<style>
  .event-info-container {
    max-width: var(--width-text-content);
    margin: var(--space-3xl) auto;
  }
  img {
    border-radius: var(--radius-md);
    width: auto;
    max-height: 50vh;
    max-width: 100%;
    display: block;
    margin: auto;
  }
  .event-name {
    margin-top: var(--space-3xl);
  }
  .meta-time {
    font-style: italic;
  }
  .nav-links-container {
    margin: var(--space-2xl) auto;
    display: flex;
    justify-content: center;
  }
  .google-maps-container {
    max-width: 100%;
    width: 500px;
    height: 400px;
    margin: var(--space-3xl) auto;
    border-radius: var(--radius-md);
    overflow: hidden;
  }
  .google-maps-container iframe {
    width: 100%;
    height: 100%;
  }
</style>