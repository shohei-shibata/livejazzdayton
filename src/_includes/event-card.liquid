{% if image %}
	{% capture image_path %}./src/images/{{image}}{% endcapture %}
{% else %}
	{% capture image_path %}./src/images/default-event-card-image.jpg{% endcapture %}
{% endif %}

<a class="event-card" href="{{ url }}">
	<div class="event-card-date">
		<div class="event-card-date-month">
			{{ event-date | getShortMonth }}
		</div>
		<div class="event-card-date-date">
			{{ event-date | getDate }} 
		</div>
		<div class="event-card-date-day">
			{{ event-date | getDay }}
		</div>
	</div>
	<div class="event-card-grid-container">
		<div class="event-card-image">
			{% image image_path, "Event Image" %}
		</div>
		<div class="event-card-text">
			<h2>{{ title }}</h2>
			<p>{{ event-date | dateString }} from {{ start-time }} to {{ end-time }}</p>
			<p>{{ location.name }}</p>
			<p>{{ location.address }} </p>
		</div>
	</div>
</a>
