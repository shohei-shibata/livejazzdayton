<a class="event-card" href="/events/{{ slug }}">
	<div class="event-card-date">
		<div class="event-card-date-month">
			{{ start | getShortMonth }}
		</div>
		<div class="event-card-date-date">
			{{ start | getDate }} 
		</div>
		<div class="event-card-date-day">
			{{ start | getDay }}
		</div>
	</div>
	<div class="event-card-grid-container">
		<div class="event-card-image">
			{{ event.image }}
		</div>
		<div class="event-card-text">
			<h2>{{ title }}</h2>
			<p>{{ start | dateString }} from {{ start | timeString }} to {{ end | timeString }}</p>
			<div class="tags-container">
				{%- for artist in artists -%}
					<span class="tag">{{ artist }}</span>
				{%- endfor -%}
			</div>
			<p>At {{ location }}</p>
		</div>
	</div>
</a>
